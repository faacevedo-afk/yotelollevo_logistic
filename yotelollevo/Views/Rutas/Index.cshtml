@model IEnumerable<yotelollevo.Ruta>

@{
    ViewBag.Title = "Rutas";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow">
    <div class="card-header bg-dark text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="card-title mb-0">Rutas</h3>
            <a href="@Url.Action("Create", "Rutas")" class="btn btn-outline-light btn-sm">
                <i class="bi bi-plus-lg"></i> Agregar Nueva Ruta
            </a>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Repartidor</th>
                    <th>Estado</th>
                    <th># Paquetes</th>
                    <th>Fecha Ruta</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var estadoNombre = item.Estado != null ? item.Estado.Nombre : "";
                    var cantPaquetes = item.RutaPaquete != null ? item.RutaPaquete.Count : 0;
                    var esPlanificada = estadoNombre == "Planificada";
                    var badgeClass = estadoNombre == "Planificada" ? "bg-info text-dark"
                                   : estadoNombre == "EnCurso" ? "bg-warning text-dark"
                                   : estadoNombre == "Cerrada" ? "bg-success"
                                   : "bg-secondary";
                    <tr>
                        <td>@item.IdRuta</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Repartidor.Nombre)
                            @Html.DisplayFor(modelItem => item.Repartidor.ApellidoPaterno)
                        </td>
                        <td>
                            <span class="badge @badgeClass">@estadoNombre</span>
                        </td>
                        <td>@cantPaquetes</td>
                        <td>@item.FechaRuta.ToString("dd-MM-yyyy")</td>
                        <td>
                            <div class="btn-group" role="group">
                                @if (esPlanificada)
                                {
                                    @Html.ActionLink("Editar", "Edit", new { id = item.IdRuta }, new { @class = "btn btn-primary btn-sm me-1" })
                                }
                                @Html.ActionLink("Detalle", "Details", new { id = item.IdRuta }, new { @class = "btn btn-sm btn-outline-primary me-1" })
                                @if (esPlanificada)
                                {
                                    @Html.ActionLink("Asignar", "Asignar", new { id = item.IdRuta }, new { @class = "btn btn-sm btn-outline-success me-1" })
                                }
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.IdRuta }, new { @class = "btn btn-sm btn-outline-danger" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>