@model yotelollevo.Ruta

@{
    ViewBag.Title = "Eliminar Ruta";
    var cantPaquetes = Model.RutaPaquete != null ? Model.RutaPaquete.Count : 0;
}

<div class="card shadow mt-3">
    <div class="card-header bg-danger text-white">
        <h3 class="card-title mb-0">Eliminar Ruta #@Model.IdRuta</h3>
    </div>
    <div class="card-body">
        <h5>¿Estás seguro de que deseas eliminar esta ruta?</h5>

        @if (cantPaquetes > 0)
        {
            <div class="alert alert-warning mt-3">
                <strong>Atención:</strong> Esta ruta tiene <strong>@cantPaquetes paquete(s)</strong> asignado(s).
                Al eliminarla, los paquetes serán desvinculados y volverán al estado <strong>Creado</strong>.
            </div>
        }

        <hr />
        <dl class="row">
            <dt class="col-sm-3">Fecha Ruta</dt>
            <dd class="col-sm-9">@Model.FechaRuta.ToString("dd-MM-yyyy")</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">@(Model.Estado != null ? Model.Estado.Nombre : "")</dd>

            <dt class="col-sm-3">Repartidor</dt>
            <dd class="col-sm-9">@(Model.Repartidor != null ? Model.Repartidor.Nombre + " " + Model.Repartidor.ApellidoPaterno : "")</dd>

            <dt class="col-sm-3">Observación</dt>
            <dd class="col-sm-9">@Model.Observacion</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="mt-3">
                <button type="submit" class="btn btn-danger">
                    Confirmar Eliminación
                </button>
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary ms-2" })
            </div>
        }
    </div>
</div>