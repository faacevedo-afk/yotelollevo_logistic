@model yotelollevo.Paquete

@{
    ViewBag.Title = "Nuevo Paquete";
}

<div class="card shadow mt-3">
    <div class="card-header bg-dark text-white">
        <h3 class="card-title mb-0">Nuevo Paquete</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="mb-3">
                <label class="form-label">Tienda</label>
                @Html.DropDownList("IdTienda", null, "Seleccione una tienda", new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.IdTienda, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label class="form-label">Nombre Destinatario</label>
                @Html.EditorFor(model => model.NombreDestinatario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NombreDestinatario, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label class="form-label">Dirección de Entrega</label>
                @Html.EditorFor(model => model.DireccionEntrega, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DireccionEntrega, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label class="form-label">Comuna de Entrega</label>
                @Html.DropDownList("IdComunaEntrega", null, "Seleccione una comuna", new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.IdComunaEntrega, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label class="form-label">Celular Destinatario</label>
                @Html.EditorFor(model => model.CelularDestinatario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CelularDestinatario, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label class="form-label">Comentario</label>
                @Html.EditorFor(model => model.Comentario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Comentario, "", new { @class = "text-danger" })
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Crear Paquete</button>
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary ms-2" })
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}